<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Store.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/menu.css" />
    <link href="@Url.Content("~/css/back.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
            <div class="container-fluid">
                
                <div class="hamburger-menu navbar-brand navbar-collapse collapse">
                    <input id="menu__toggle" type="checkbox" />
                    <label class="menu__btn" for="menu__toggle">
                        <span></span>
                    </label>

                    <ul class="menu__box">
                        <li><a class="menu__item navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="menu__item navbar-brand" href="#">About</a></li>
                        <li><a class="menu__item navbar-brand" href="#">Team</a></li>
                        <li><a class="menu__item navbar-brand" href="#">Contact</a></li>
                        <li><a class="menu__item navbar-brand" href="#">Categories</a></li>
                    </ul>
                </div>

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class='fa-solid fa-gun'></i> Military House</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown text-dark">
                                <a href="#" class="nav-link dropdown-toggle text-light" data-bs-toggle="dropdown"><i class="bi bi-gear"></i> Management</a>
                                <div class="dropdown-menu">
                                    <a  class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index"> Categories</a>
                                    <a  class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index"> Products</a>
                                    <a  class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AddImages"> AddImages</a>
                                    <a  class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index"> Weapons</a>
                                </div>
                            </li>
                        }

                    </ul>
                    <form class="btn-group form-inline my-2 my-lg-0" asp-controller="Home" asp-action="Filter" style="padding-right: 25px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a weapen..." aria-label="Recipient's username" aria-describedby="button-addon2">
                        <span class="input-group-btn">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                        </span>
                    </form>
                </div>
                <partial name="_Identity.cshtml"/>
            </div>
        </nav>
    </header>
    <div class="container-fluid navbar-dark bg-dark">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted navbar-dark bg-dark">
        <div class="container">
            &copy; 2023 - Military Store
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
