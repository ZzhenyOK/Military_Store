@model Store.DAL.Models.ProductImages

@{
    ViewData["Title"] = "AddImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: url('/images/Background2.jpg');
        margin: 0;
        background-size: 100%;
        background-repeat: no-repeat;
        background-position: center;
    }
</style>

<h1 class="text-light">Add Images</h1>

<h4 class="text-light">Add Images For Product</h4>
<hr/>
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="AddImages" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Product"></select>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input name="Image" type="file" class="form-control" multiple />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}